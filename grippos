local Players = game:GetService("Players")
local CAS = game:GetService("ContextActionService")
local plr = Players.LocalPlayer

local function applyGripPos(pos)
    local char, back = plr.Character, plr:FindFirstChildOfClass("Backpack")
    if char and back then
        for _,v in char:GetChildren() do
            if v:IsA("Tool") then
                v.Parent = back
                v.GripPos = pos
                v.Parent = char
            end
        end
    end
end

local BONE = "I have a bone to pick with you"
pcall(CAS.UnbindAction, CAS, BONE)
CAS:BindAction(BONE, function(_, state, _)
    if state == Enum.UserInputState.Begin then
        for i=0, 100, 0.5 do
            applyGripPos(Vector3.new(-3, 0, -i))
            task.wait()
        end
    end
end, true, Enum.KeyCode.E)
CAS:SetTitle(BONE, "Shoot")
CAS:SetPosition(BONE, UDim2.new(1, -180, 1, -130))
